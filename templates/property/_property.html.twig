<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{  path('property.show', {slug: property.slug, id: property.id})}}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">
            {{ property.area }} m² - {{ property.city }} ({{ property.postalCode }})
        </p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold">
            {{ property.price | number_format(0, '', ' ')}} €
        </div>
        <p class="card-text">
            {{ property.description | nl2br}}
        </p>
    </div>
</div>